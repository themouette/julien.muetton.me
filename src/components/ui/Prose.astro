---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<div
  class:list={[
    "prose",
    "prose-h1:font-bold prose-h1:text-xl",
    "prose-h2:font-bold prose-h2:text-lg",
    "prose-a:text-cyan-900 prose-a:underline prose-a:decoration-dashed",
    "prose-a-hover:text-cyan-700",
    "prose-a-focus:text-cyan-700 prose-a-focus:outline-dashed",
    "prose-a-active:text-cyan-700",
    "prose-p:text-justify prose-p:leading-normal",
    "prose-img:rounded-xl",
    className,
  ]}
>
  <slot />
</div>
