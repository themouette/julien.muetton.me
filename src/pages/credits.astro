---
import Link from "../components/ui/Link.astro";
import PageLayout from "../layouts/PageLayout.astro";

const credits = [
  {
    name: "Astro",
    url: "https://astro.build/",
    description:
      "A static site generator that allows for the use of React components.",
  },
  {
    name: "Tailwind CSS",
    url: "https://tailwindcss.com/",
    description:
      "A utility-first CSS framework that allows for rapid development.",
  },
  {
    name: "Font Awesome",
    url: "https://fontawesome.com/",
    description: "A library of icons that can be used in web development.",
  },
  {
    name: "InconPacks",
    url: "https://iconpacks.net/",
    description: "A library of icons that can be used in web development.",
  },
];
---

<PageLayout title="Credits">
  <p>This site was created with the help of the following resources:</p>
  <ul class="ml-8 list-disc">
    {
      credits.map((credit) => (
        <li>
          <Link class="bold" href={credit.url}>
            {credit.name}
          </Link>{" "}
          - {credit.description}
        </li>
      ))
    }
  </ul>
</PageLayout>
