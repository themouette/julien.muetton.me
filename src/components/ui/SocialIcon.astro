/** All possible social icons */
export type Social = keyof typeof icons;
interface Props {
  social: Social;
  reverse?: boolean;
  noColor?: boolean;
  class?: string;
}
const { social, reverse = false, noColor, class: className } = Astro.props;

if (!(social in icons)) {
  throw new Error(`Invalid social icon: ${social}`);
}
const { path, color, background, viewBox, title } = icons[social];
const iconColor = noColor ? "currentColor" : color;
const iconBackground = background;

const fgColor = reverse
  ? iconBackground === "transparent"
    ? "#fff"
    : iconBackground
  : iconColor;
const bgColor = reverse ? iconColor : iconBackground;
